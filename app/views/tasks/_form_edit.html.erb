<div>
  <%= form_with model: [@category, @task] do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @task.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <br/>
    <div>
      <%= form.label :body %><br/>
      <%= form.text_area :body %>
      <% @task.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :status %><br>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
    <br/>
    <button class="bg-orange-200 hover:bg-orange-400 text-black font-bold py-1 px-3 rounded-full">
      <%= form.submit id: 'postButton' %>
    </button>
  <% end %>
</div>  