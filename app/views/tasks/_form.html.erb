<div>
  <%= form_with model: [ @category, @category.tasks.build ] do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.label :status %><br>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
    
    <div>
      <%= form.submit id: 'postButton' %>
    </div>
  <% end %>
</div>